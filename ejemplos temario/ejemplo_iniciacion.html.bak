<html>
<header>
    
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.24/angular.min.js"></script> 
       
</header>
<body ng-controller="ejemploControlador">
<section class="container">
    <div class="form-group">
        <label for="inputName">Your name</label>
        <input type="text"  class="form-control" id="inputName" placeholder="Escribe tu nombre" ng-model="name">
    </div>
    <a href="#" ng-class="getClassForButton()" role="button" ng-click="doClick()">Saludar</a>
         <p>Este es el nombre que est√° escribiendo: {{name}}</p>
    <p>{{saludo}}</p>
</section>
<script>
    angular.module('ejemplo', [])
            .controller('ejemploControlador', ['$scope', function ($scope) {
                $scope.saludo = "Estoy esperando tu nombre para saludarte";
                $scope.doClick = function () {
                    $scope.saludo="Hola "+$scope.name+"!"
                }
                $scope.getClassForButton=function(){
                    if(angular.isDefined($scope.name)&&$scope.name.length>3){
                        return "btn btn-primary btn-lg";
                    } else{
                        return "btn btn-primary btn-lg disabled";
                    }
                }
            }]);
    angular.bootstrap(document, ['ejemplo']);
</script>
</body>
</html>